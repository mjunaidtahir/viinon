{
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
  },
  "saveAndRun": {
    "commands": [
      {
        "match": "\\assets/translations/*",
        "cmd": "flutter pub run easy_localization:generate -S \"assets/translations/\" -O \"lib/gen/translations\" - o \"codegen_loader.g.dart\" -f keys",
        "useShortcut": false,
        "silent": false
      }
    ]
  },
  "java.configuration.updateBuildConfiguration": "interactive",
  "cSpell.words": [
    "cupertino",
    "firestore",
    "geolocator",
    "pinput",
    "Solway"
  ]
}